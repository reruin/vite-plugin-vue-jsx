{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames":true,
    "outDir": "../../dist/jsx",
    "module": "esnext",
    "skipLibCheck":true,
    "allowSyntheticDefaultImports":true,
    "lib": [
      "ESNext"
    ],
    "sourceMap": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}