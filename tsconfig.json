{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames":true,
    "outDir": "dist",
    "module": "commonjs",
    "skipLibCheck":true,
    "allowSyntheticDefaultImports":true,
    "lib": [
      "ESNext"
    ],
    "sourceMap": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "./src/jsx"
  ]
}